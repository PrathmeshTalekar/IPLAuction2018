<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="name surname" />

            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text_view"
                android:layout_centerHorizontal="true"
                android:text="12345" />

            <TextView
                android:id="@+id/bid_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_text_view"
                android:layout_centerHorizontal="true"
                android:text="56789" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+100" />

                <Button
                    android:id="@+id/button_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+500" />

                <Button
                    android:id="@+id/button_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2000" />

                <Button
                    android:id="@+id/button_5000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5000" />

                <Button
                    android:id="@+id/button_10000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_20000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20000" />

                <Button
                    android:id="@+id/button_50000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+50000" />

                <Button
                    android:id="@+id/button_100000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+100000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_200000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+200000" />

                <Button
                    android:id="@+id/button_500000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+500000" />

                <Button
                    android:id="@+id/button_1000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1000000" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="No bids yet"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>